<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{HH:mm:ss.SSS} %-10thread %-42logger %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>./build/test-out.log</file>
    <append>false</append>
    <encoder>
      <pattern>%-5relative %-5level %logger{35} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="infra.remoting.transport.local" level="INFO" />
  <logger name="infra.remoting.FrameLogger" level="INFO" />
  <logger name="infra.remoting.core.RequesterChannel" level="DEBUG" />
  <logger name="infra.remoting.core.ResponderChannel" level="DEBUG" />
  <logger name="infra.remoting.test.TransportTest" level="DEBUG" />
  <logger name="infra.remoting.resume.ClientChannelSession" level="DEBUG" />
  <logger name="infra.remoting.resume.ServerChannelSession" level="DEBUG" />
  <logger name="infra.remoting.resume.ResumableConnection" level="DEBUG" />
  <logger name="infra.remoting.resume.InMemoryResumableFramesStore" level="DEBUG" />

  <root level="INFO">
    <appender-ref ref="STDOUT" />
    <appender-ref ref="FILE" />
  </root>

</configuration>
